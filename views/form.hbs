{{> header}}

  <section class = "pa4 black-80">
    <header>
      <h1>{{{role.role_name}}}</h1>
      <p>{{{role.role_desc}}}</p>
      <small>{{{role.start_date}}} {{{text.until}}} {{{role.end_date}}}</small>
      <small>{{{text.organisation}}} {{{role.org_name}}}</small>
    </header>
    <form class="" action="./addvolunteer" method="post">
      <div class="mt3">
        <label class="db fw4 lh-copy f6" for="name">{{text.formFN}}</label>
        <!--  Check if the form had been filled in, and set value of input to that if so -->
        <input class="input-reset ba measure w-80" type="text" id="name" name="user_fname" {{#if prefilled}}
            {{#each prefilled}}
              value={{this.user_fname}}
            {{/each}}
          {{/if}}>
      </div>
      <div class="mt3">
        <label class="db fw4 lh-copy f6" for="name">{{text.formLN}}</label>
        <input class="input-reset ba measure w-80" type="text" id="name" name="user_lname" {{#if prefilled}}
            {{#each prefilled}}
              value={{this.user_lname}}
            {{/each}}
          {{/if}}>
      </div>
      <div class="mt3">
        <label class="db fw4 lh-copy f6" for="age">{{text.formAge}}</label>
        <input class="input-reset ba mw3" type="number" id="age" name="user_age" {{#if prefilled}}
            {{#each prefilled}}
              value={{this.user_age}}
            {{/each}}
          {{/if}}>
      </div>
      <div class="mt3">
        <label class="db fw4 lh-copy f6" for="msg">{{text.formAvail}}</label>
        <textarea class="reset b--black w-100 measure-wide" id="msg" name="user_message">{{#if prefilled}}{{#each prefilled}}{{this.user_message}}{{/each}}{{/if}}</textarea>
      </div>
      <div class="mt3">
        <label class="db fw4 lh-copy f6" for="phone">{{text.formPhone}}</label>
        <input class="input-reset ba w-80 measure-narrow" type="number" id="phone" name="user_phone" {{#if prefilled}}
            {{#each prefilled}}
              value={{this.user_phone}}
            {{/each}}
          {{/if}}>
      </div>
      <div class="mt3">
        <label class="db fw4 lh-copy f6" for="mail">{{text.formEmail}}</label>
        <input class="input-reset ba measure w-90" type="email" id="mail" name="user_mail" {{#if prefilled}}
            {{#each prefilled}}
              value={{this.user_mail}}
            {{/each}}
          {{/if}}>
      </div>
      <!-- Add a hidden input holding the role_id so it can be added to the volunteer database -->
      <div class="mt3">
        <input class="" type="hidden" name="role_id" value = {{{role._id}}}>
      </div>
      {{#if error}}
        {{#each error}}
        <small class="light-red">{{this.msg}}</small><br>
        {{/each }}
      {{/if}}
      <div class="mt3">
        <input class="ph3 pv2 input-reset altbg shadow-2 db tc brown link grow f6 ba br3 pa2 bg-leave" type="submit" value={{text.formSubmit}}>
      </div>
    </form>
  </section>
