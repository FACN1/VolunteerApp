  <form class="ph3 black-100" action="/addrole" method="post">
    <div class="mt3">
      <label class="db fw4 lh-copy f4" for="org-name">Name of organisation:</label>
      <input class="pa2 input-reset ba bg-transparent w-100 measure br3" type="text" id="org-name" name="org_name">
    </div>
    <div class="mt3">
      <label class="db fw4 lh-copy f4" for="org-desc">Organisation description:</label>
      <textarea class="pa2 input-reset ba bg-transparent w-100 measure br3" id="org-desc" name="org_desc"></textarea>
    </div>
    <div class="mt3">
      <label class="db fw4 lh-copy f4" for="role-name">Name of Role:</label>
      <input class="pa2 input-reset ba bg-transparent w-100 measure br3" type="text" id="role-name" name="role_name">
    </div>
    <div class="mt3">
      <label class="db" for="role-desc">Role Description:</label>
      <textarea class="pa2 input-reset ba bg-transparent w-100 measure br3" id="role-desc" name="role_desc"></textarea>
    </div>
    <div class="mt3">
      <label class="db fw4 lh-copy f4" for="num_vol">Number of Volunteers Required:</label>
      <input class="pa2 input-reset ba bg-transparent w-20 mw3 br3" type="number" id="num_vol" name="num_vol" min="1" step="1">
    </div>
    <div class="mt3">
      <label class="db fw4 lh-copy f4" for="start-date">Start Date:</label>
      <input class="pa2 input-reset ba bg-transparent w-50 mw5 br3" type="date" id="start-date" name="start_date">
